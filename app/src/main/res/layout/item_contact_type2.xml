<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_px50"
        android:background="#f8f8f9"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_px24"
        android:text="A"
        android:textColor="#000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_px100">

        <CheckBox
            android:id="@+id/cbChecked"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_px24"
            android:background="@drawable/sc_cb_contact"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/sign_tv"
            android:layout_width="@dimen/dp_px60"
            android:layout_height="@dimen/dp_px60"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_px24"
            android:layout_toRightOf="@+id/cbChecked"
            android:background="@mipmap/last_name_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="小丽"
            android:textColor="#3b8ed4"
            android:textSize="@dimen/sp_px24"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_px24"
            android:layout_toRightOf="@+id/sign_tv"
            android:singleLine="true"
            android:text="王小丽"
            android:textColor="#000"
            android:textSize="@dimen/sp_px30" />

        <TextView
            android:id="@+id/level_tv"
            android:layout_width="@dimen/dp_px82"
            android:layout_height="@dimen/dp_px30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_px24"
            android:layout_toRightOf="@+id/name_tv"
            android:background="@drawable/tv_d_img_level"
            android:gravity="center"
            android:text="总经理"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_px18" />

        <ImageView
            android:id="@+id/enter_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_px48"
            android:src="@mipmap/iv_enter" />

        <TextView
            android:id="@+id/count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_px24"
            android:layout_toLeftOf="@+id/enter_iv"
            android:singleLine="true"
            android:text="未激活"
            android:textColor="#999999"
            android:textSize="@dimen/sp_px28" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_px2"
            android:layout_alignLeft="@+id/sign_tv"
            android:layout_alignParentBottom="true"
            android:background="#E0E0E0" />

    </RelativeLayout>

</LinearLayout>