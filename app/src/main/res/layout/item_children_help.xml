<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_px80"
    android:background="#efefef"
    android:orientation="vertical">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_px90"
        android:paddingRight="@dimen/dp_px20">

        <TextView
            android:id="@+id/second_textview"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_px80"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="1.常见问题"
            android:textColor="@color/c_474747"
            android:textSize="@dimen/sp_px28" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:src="@mipmap/iv_enter" />


    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dp_px90"
        style="@style/line_hig_sty"
        android:background="#e1e1e1" />
</LinearLayout>