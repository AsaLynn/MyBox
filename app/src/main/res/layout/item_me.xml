<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/credit_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_px120"
    android:background="@drawable/bg_d_c_sc">

    <ImageView
        android:id="@+id/iv_card2"
        android:layout_width="@dimen/dp_px40"
        android:layout_height="@dimen/dp_px40"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_px20"
        android:src="@mipmap/iv_m_img_card" />

    <TextView
        android:id="@+id/credit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_card2"
        android:layout_marginLeft="@dimen/dp_px20"
        android:layout_toRightOf="@+id/iv_card2"
        android:text="信用卡"
        android:textColor="@color/c_ff000000"
        android:textSize="@dimen/sp_px28"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/credit_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/credit_tv"
        android:layout_below="@+id/credit_tv"
        android:text="12张"
        android:textColor="@color/c_ababab"
        android:textSize="@dimen/sp_px24"
        android:textStyle="normal" />

</RelativeLayout>