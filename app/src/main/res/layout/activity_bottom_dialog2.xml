<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/content_ll_sty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:layout_height="@dimen/dp_px100"
        android:layout_marginTop="@dimen/dp_px20"
        android:paddingBottom="0dp"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/tv_add_bank_name"
            android:layout_marginTop="@dimen/dp_px28"
            android:text="持  卡  人"
            android:textSize="@dimen/dp_px32"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <!--style="@style/sign_tv_sty"-->

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_add_bank_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_add_bank_name"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_add_bank_card_owner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_px36"
                android:gravity="bottom"
                android:inputType="text"
                android:paddingBottom="@dimen/dp_px20"
                android:paddingRight="@dimen/dp_px50"
                android:textSize="@dimen/sp_px28" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="@dimen/dp_px100"
        android:paddingBottom="0dp"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/tv_add_bank_select_bank"
            android:layout_marginTop="@dimen/dp_px28"
            android:text="选择银行"
            android:textSize="@dimen/dp_px32"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <!--style="@style/sign_tv_sty"-->

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_add_bank_select_bank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_add_bank_select_bank"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_add_bank_select_bank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_px28"
                android:layout_toRightOf="@id/tv_add_bank_select_bank"
                android:clickable="false"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:hint="仅支持储蓄卡/借记卡"
                android:inputType="text"
                android:textSize="@dimen/sp_px28" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="@dimen/dp_px100"
        android:paddingBottom="0dp"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/tv_add_bank_card_num"
            android:layout_marginTop="@dimen/dp_px28"
            android:text="银行卡号"
            android:textSize="@dimen/dp_px32"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <!--style="@style/sign_tv_sty"-->

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_add_bank_card_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_add_bank_card_num"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_add_bank_card_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_px28"
                android:hint="填写储蓄卡/借记卡卡号"
                android:inputType="number"
                android:maxLength="23"
                android:textSize="@dimen/sp_px28" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_px48"
        android:layout_marginRight="@dimen/dp_px48"
        android:layout_marginTop="@dimen/dp_px30"
        android:text="仅能添加与您实名认证信息一致的储蓄卡"
        android:textSize="@dimen/sp_px24" />

    <Button
        android:id="@+id/bt_add_bank_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_px288"
        android:text="下一步" />


</LinearLayout>
